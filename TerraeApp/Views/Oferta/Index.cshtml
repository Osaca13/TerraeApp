@model TerraeApp.Models.Oferta.OfertaIndexModel


    <div id=" Ofertas">
        <h3 style="text-align:center">Ofertas de empleo</h3>
        <div id ="divOfertas"> 
            <table class="table table-striped table-hover" id="tableOfertas">
                <thead class="">
                    <tr>
                        <th class="col-md-1 col-lg-1"></th>
                        <th class="col-md-3 col-lg-3">Título</th>
                        <th class="col-md-2 col-lg-3">Empresa</th>
                        <th class="col-md-2 col-lg-3">Fecha Publicación</th>
                        <th class="col-md-2 col-lg-2">Lugar:</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var oferta in Model.GetOfertaIndexModel)
                    {
                    
                    <tr >
                        <td class="col-md-1 col-lg-1">
                            <a asp-controller="Oferta" asp-action="Detalles" asp-route-id=@oferta.Id>
                                <img class="img-responsive" style="width:20px; height:auto" src="~/images/Hand Right_50pxb.png" alt="Generic placeholder image">
                               
                            </a>

                        </td>
                        <td class="col-md-2 col-lg-3" >
                            <div class="media">
                                <a asp-controller="Oferta" asp-action="Detalles" asp-route-id=@oferta.Id>
                                <p>@oferta.Titulo</p>
                                </a>
                            </div>
                            
                        </td>
                        <td class="col-md-2 col-lg-3">
                            <a asp-controller="Empresa" asp-action="Index" asp-route-id=@oferta.Id>
                                <p> @oferta.NombreEmpresa </p>
                                </a>
                        </td>
                        <td class="col-md-2 col-lg-3">
                            <a asp-controller="Oferta" asp-action="Detalles" asp-route-id=@oferta.Id>
                                <p> @oferta.FechaInicio </p>
                                </a>
                        </td>
                        <td class="col-md-2 col-lg-2">
                            <a asp-controller="Oferta" asp-action="Detalles" asp-route-id=@oferta.Id>
                                <p> @oferta.Provincia </p>
                                </a>
                        </td>

                    </tr>
                   


                    }
                    
                
                </tbody>
                
            </table>

        </div>


    </div>



       
