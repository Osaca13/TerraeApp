@model TerraeApp.Models.Register.RegisterViewModel


<div class="container-fluid" id="registerpage">


    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3 col-md-4 col-lg-4 left">
                            <a href="#" class="active" id="register-form-link">Registro</a>
                        </div>
                        <div class="col-xs-5 col-md-7 col-lg-7 right ">
                            <p class="warning">La contraseña debe tener un mínimo 6 dígitos. Una mayúscula, una minúscula, un numero y un caracter espcial</p>
                        </div>

                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">

                            <form id="register-form" asp-action="Register" method="post" role="form" style="display: block;" asp-controller="Account">


                                <div class="form-group">
                                    <input asp-for="NombreUsuario" type="text" name="nombreusuario" id="nombreusuario" tabindex="1" class="form-control" placeholder="Usuario"/>

                                    <span asp-for="NombreUsuario"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Contraseña" type="password" name="contraseña" id="contraseña" tabindex="2" class="form-control" placeholder="Contraseña" required="required" runat="server" />

                                    <span asp-for="Contraseña"></span>
                                </div>
                                @*<div class="form-group">
                                    <input asp-for="ConfirmarContraseña" type="password" name="confirmpassword" id="confirmpassword" tabindex="3" class="form-control" placeholder="Confirmar Contraseña" required="required" runat="server">

                                    <span asp-validation-for="ConfirmarContraseña"></span>
                                </div>*@

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <button type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register">Regístrese</button>
                                            <div asp-validation-summary="All"></div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



